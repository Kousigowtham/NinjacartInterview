<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:background="@drawable/item_card_background"
    android:paddingVertical="20dp"
    android:paddingHorizontal="15dp"
    >

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/removeButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/item_action_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemValueTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/remove"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/itemValueTextView"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addButton"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/item_action_icon"
        android:drawableStart="@drawable/add"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>